
<% @cart_items.each do |cart_item| %>
<%= cart_item.item.id %>
<br>
<%= cart_item.item.name%>
<br>
Quantité : <%= cart_item.quantity%>
<br>
<%= cart_item.price %> €
<br>
<%= link_to "DELETE", home_cart_item_path(cart_item.id), :method => :delete,  data: { confirm: 'Are you sure you want to delete this article from your cart ?' } %>
<br><br>
<% end %>

<h3>Somme : <%=@cart.sum_price%> €</h3>

<br>
<% if !@cart.items.empty? %>

<h3><%= link_to "Passer à la page de payement", home_payments_path, method: "get" %></h3>

<% end%>
