<main class="content">
	<div class="container-fluid p-5">

		<h1 class="h3 mb-3">Items</h1>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
								  <th>Produit</th>
									<th>Prix de départ</th>
                  <th>Reduction</th>
									<th>Remise</th>
                  <th>Nouveau Prix</th>
									<th>Description</th>
									<th>Categories</th>
									<th>Ajouter au panier</th>
								</tr>
							</thead>
							<tbody>
                <%@items.each do |item| %>
                <tr>
                  <td><%= link_to(item.name, home_item_path(item.id)) %></td>
                  <td><%= item.price%> €</td>
                  <td><%= item.discount ? "Oui" : "Non" %></td>
                  <td><%= item.percentage_discount%> %</td>
                  <td><%= item.reduced_price%> €</td>
                  <td><%= item.description%></td>
									<td><% item.categories.each do|cat| %>
											<%=cat.name %>
											<%end%>
									</td>
									<td><%= link_to "Ajouter au panier", home_cart_item_path(item.id), method: "patch"%></td>

                </tr>
                <% end%>
							</tbody>
						</table>

					</div>
				</div>
        <br>
			</div>
		</div>

	</div>
</main>
