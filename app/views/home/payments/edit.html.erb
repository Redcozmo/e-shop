<div class="row row-devise align-items-center">
  <div class="mx-auto text-center">

  <h2 class="mb-3">Vérifiez si vos informations sont bien à jour</h2>

  <div class="card card-devise p-5">
  <%= form_for(@profile, url: home_payment_path(@profile.id), html: { method: :patch }) do |f| %>

  <div class=" row p-0 pb-3">
  <div class="col-3">
      <%= f.label :first_name %>
  </div>
  <div class="col-9">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", :required => 'required', class: "input-profile" %>
  </div>
  </div>

  <div class=" row p-0 pb-3">
  <div class="col-3">
      <%= f.label :last_name %>
  </div>
  <div class="col-9">
      <%= f.text_field :last_name, autocomplete: "last name", :required => 'required', class: "input-profile" %>
  </div>
  </div>

  <div class=" row p-0 pb-3">
  <div class="col-3">
      <%= f.label :phone_number %>
  </div>
  <div class="col-9">
      <%= f.text_field :phone_number, autocomplete: "phone number", :required => 'required', class: "input-profile" %>
  </div>
  </div>

  <div class=" row p-0 pb-3">
  <div class="col-3">
      <%= f.label :address %>
  </div>
  <div class="col-9">
      <%= f.text_field :street, autocomplete: "street", :required => 'required', class: "input-profile" %>
  </div>
  </div>

  <div class=" row p-0 pb-3">
  <div class="col-3">
      <%= f.label :postal_code %>
  </div>
  <div class="col-9">
      <%= f.text_field :postal_code, autocomplete: "postal_code", :required => 'required', class: "input-profile" %>
  </div>
  </div>

  <div class=" row p-0 pb-3">
  <div class="col-3">
      <%= f.label :city %>
  </div>
  <div class="col-9">
      <%= f.text_field :city, autocomplete: "city", :required => 'required', class: "input-profile" %>
  </div>
  </div>

  <div class="actions">
  <%= f.submit "Valider", class:"btn btn-info btn-lg my-3" %>
  </div>
  <% end %>
  </div>