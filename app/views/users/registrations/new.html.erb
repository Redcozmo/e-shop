
<div class="row align-items-center row-devise">
  <div class="text-center mx-auto">
    <h2 class="my-5">Inscription</h2>

      <div class="card card-devise p-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

         <div class="col-12 field pb-3">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
        </div>

          <div class="col-12 field pb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

            <div class="col-12 field pb-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
  

        <div class="actions pb-3">
          <%= f.submit "Inscription", class:"btn btn-info btn-lg my-3" %>
        </div>

      <% end %>
      </div>
    
    <div class="my-3">
      <%= render "users/shared/links" %>
    </div>
  </div>
  
</div>
