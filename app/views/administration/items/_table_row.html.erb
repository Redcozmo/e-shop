<div class="card card-admin my-3">

	<input type="text" id="myInput" onkeyup="searchBarTables()" placeholder="Rechercher un produit par nom..." title="Rentrer un nom">

	<div class="table-responsive">
		<table id="myTable" data-toggle="table" class="table table-striped table-hover">
			<thead>
				<tr>
					<th data-sortable="true" class="column-max-width">Id</th>
					<th data-sortable="true" class="column-max-width">Nom</th>
					<th data-sortable="true" class="column-max-width">Visites</th>
					<th data-sortable="true" class="column-max-width">Commandes</th>
					<th data-sortable="true" class="column-max-width">Prix initial</th>
					<th data-sortable="true" class="column-max-width">Réduction ?</th>
					<th data-sortable="true" class="column-max-width">Remise</th>
					<th data-sortable="true" class="column-max-width">Prix final</th>
					<th>Edition</th>
					<th>Supression</th>
				</tr>
			</thead>
			<tbody>
				<%@items.order('id ASC').each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to(item.name, administration_item_path(item.id)) %></td>
					<td><%= item.visit_number %> (<%= item.popularity_indice %>%) </td>
					<td><%= item.ordered_number%>(<%=item.ordered_indice%>%)</td>
					<td><%= item.price %> €</td>
					<td><%= item.discount ? "Oui" : "Non" %></td>
					<td><%= item.percentage_discount %> %</td>
					<td><%= item.reduced_price %> €</td>
					<td><%= link_to "EDITER", edit_administration_item_path(item.id) %></td>
					<td><%= link_to "SUPPRIMER", administration_item_path(item.id), :method => :delete,  data: { confirm: 'Etes-vous sûr de vouloir supprimer ce produit de votre stock ?' } %>
					</td>
				</tr>
				<% end%>
			</tbody>
		</table>

	</div>
</div>
