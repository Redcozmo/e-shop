	<div class="my-3">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr class="admin-table">
						<th>ID</th>
						<th>Produit</th>
						<th>Visites</th>
						<th>Commandes</th>
						<th>Prix de départ</th>
						<th>Réduction</th>
						<th>Remise</th>
						<th>Nouveau Prix</th>
						<th>Edition</th>
						<th>Supression</th>
					</tr>
				</thead>
				<tbody>
					<%@items.order('id ASC').each do |item| %>
					<tr>
						<td><%= item.id%></td>
						<td><%= link_to(item.name, administration_item_path(item.id), class:"btn-info") %></td>
						<td><%= item.visit_number%>(<%= item.popularity_indice%>%) </td>
						<td><%= item.ordered_number%>(<%=item.ordered_indice%>%)</td>
						<td><%= item.price%> €</td>
						<td><%= item.discount ? "Oui" : "Non" %></td>
						<td><%= item.percentage_discount%> %</td>
						<td><%= item.reduced_price%> €</td>
						<td><%= link_to "EDITER", edit_administration_item_path(item.id), class:"btn-info btn" %></td>
						<td><%= link_to "SUPPRIMER", administration_item_path(item.id), class:"btn-warning btn", :method => :delete,  data: { confirm: 'Etes-vous sûr de vouloir supprimer ce produit de votre stock ?' } %>
						</td>
					</tr>
					<% end%>
				</tbody>
			</table>

		</div>
	</div>
