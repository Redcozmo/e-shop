<div class="card card-admin my-3">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Client</th>
          <th>Nb Articles</th>
          <th>Etiquette Postale</th>
          <th>Checklist</th>
          <th>Status</th>
          <th>MAJ</th>
        </tr>
      </thead>
      <tbody>
        <%@orders.order('id ASC').each do |order| %>
        <tr>

          <td>
            <%= link_to order.id ,administration_order_path(order.id)%>
          </td>
          <td><%= order.created_at.asctime%></td>
          <td><%= order.user.email%> </td>
          <td>
            <%= order.items.count%>
          </td>
          <td><%= link_to "DOWNLOAD PDF", administration_order_postal_sticker_path(order.id, format: :pdf) %></td>
          <td><%= link_to "DOWNLOAD PDF", administration_order_items_checklist_path(order.id, format: :pdf) %></td>
          <%= form_for order, url: administration_order_path(order.id), html: { method: :patch } do |f| %>
          <td>
           <%= f.select :status, [["Expédiée",1], ["Livrée",2]], :selected => order.status, :data_no_turbolink => true , onchange: 'this.form.submit();' %>
          </td>
          <td><%= f.submit "Modifier"  %></td>
          <% end %>
        </tr>
        <% end%>
      </tbody>
    </table>

  </div>
</div>
