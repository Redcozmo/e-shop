<div class="card card-admin my-3">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Stripe_customer_ID</th>
          <th>Client</th>
          <th>Articles</th>
          <th>Total</th>
          <th>Etiquette Postale</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <%@orders.order('id ASC').each do |order| %>
        <tr>
          <td>
            <%= link_to order.id ,administration_order_path(order.id)%>
          </td>
          <td><%= order.created_at.asctime%></td>
          <td><%= order.stripe_customer_id %></td>
          <td><%= order.user.email%> </td>
          <td>
            <% order.items.each do |itm|%>
            <%=itm.name%>
            <% end%>
          </td>
          <td><%= order.items.sum("price")%> â‚¬ </td>
          <td><%= link_to "DOWNLOAD PDF", administration_order_postal_sticker_path(order.id, format: :pdf) %></td>
          <td><%= order.status%></td>
        </tr>
        <% end%>
      </tbody>
    </table>

  </div>
</div>
