<div class="card card-admin my-3">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Produit</th>
          <th>Prix de départ</th>
          <th>Réduction</th>
          <th>Remise</th>
          <th>Nouveau Prix</th>
          <th>Quantité</th>
        </tr>
      </thead>
      <tbody>
        <% @order.items.order('id ASC').each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to(item.name, home_item_path(item.id)) %></td>
          <td><%= item.price %> €</td>
          <td><%= item.discount ? "Oui" : "Non" %></td>
          <td><%= item.percentage_discount %></td>
          <td><%= item.reduced_price %> €</td>
          <td><%= ItemOrder.where(order_id: @order.id).quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
