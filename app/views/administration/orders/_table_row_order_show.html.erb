<div class="card card-admin my-3">

	<input type="text" id="myInput" onkeyup="searchBarTables()" placeholder="Rechercher un produit par nom..." title="Rentrer un nom">

  <div class="table-responsive">
    <table id="myTable" data-toggle="table" class="table table-striped table-hover">
      <thead>
        <tr>
          <th data-sortable="true">Id</th>
          <th data-sortable="true">Produit</th>
          <th data-sortable="true">Prix de départ</th>
          <th data-sortable="true">Réduction</th>
          <th data-sortable="true">Remise</th>
          <th data-sortable="true">Nouveau Prix</th>
          <th data-sortable="true">Quantité</th>
        </tr>
      </thead>
      <tbody>
        <% @order.items.order('id ASC').each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to(item.name, home_item_path(item.id)) %></td>
          <td><%= item.price %> €</td>
          <td><%= item.discount ? "Oui" : "Non" %></td>
          <td><%= item.percentage_discount %></td>
          <td><%= item.reduced_price %> €</td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
