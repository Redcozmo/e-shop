	<% @items.each do |item| %>


<div id="modal-<%= item.id %>" class="modal fade" tabindex="-1" aria-labelledby="modalDescriptionItem" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
		<div class="modal-header">
        <h5 class="modal-title text-uppercase h3 font-weight-bold text-primary" id="exampleModalCenterTitle">
					<%= link_to(item.name, home_item_path(item.id)) %>
				</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
      <h3 class="text-info">Healing effects</h3>
        <small class="text-muted">
            <% item.categories.each do|cat| %>
            <%=cat.name %>
            <%end%>
			    </small>
			</div>

    </div>
  </div>
</div>

<% end %>
